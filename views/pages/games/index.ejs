<!DOCTYPE html>
<html>
<head>
  <% include ../../partials/header.ejs %>
  <script src=""></script>
  <style type="text/css">
    .hide-bullets {
      list-style:none;
      margin-left: -40px;
      margin-top:20px;
    }
  </style>
</head>

<body>

  <% include ../../partials/nav.ejs %>

  <div class="container">
    <div id="main_area">
      <!-- Slider -->
      <div class="row">
        <div class="col-xs-12" id="slider">
          <!-- Top part of the slider -->
          <div class="row">
            <div class="col-sm-8" id="carousel-bounding-box">
              <div class="carousel slide" id="myCarousel">
                <!-- Carousel items -->
                <div class="carousel-inner">
                  <div class="active item" data-slide-number="0">
                    <img src="/images/asteroids.png"></div>

                    <div class="item" data-slide-number="1">
                      <img src="/images/pong.jpg"></div>

                      <div class="item" data-slide-number="2">
                        <img src="/images/dots.png"></div>

                        <div class="item" data-slide-number="3">
                          <img src="/images/coming-soon.jpg"></div>

                          <div class="item" data-slide-number="4">
                            <img src="/images/coming-soon.jpg"></div>

                            <div class="item" data-slide-number="5">
                              <img src="/images/coming-soon.jpg"></div>
                            </div><!-- Carousel nav -->
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                              <span class="glyphicon glyphicon-chevron-left"></span>                                       
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                              <span class="glyphicon glyphicon-chevron-right"></span>                                       
                            </a>                                
                          </div>
                        </div>

                        <div class="col-sm-4" id="carousel-text"></div>

                        <div id="slide-content" style="display: none;">
                          <div id="slide-content-0">
                            <h2>Asteroids</h2>
                            <p>Flippin Awesome Game</p>
                            <p class="sub-text">Click<a href="#"> Here </a>to play!</p>
                          </div>

                          <div id="slide-content-1">
                            <h2>Pong</h2>
                            <p>Classic game of pong</p>
                            <p class="sub-text">Click<a href="#"> Here </a>to play!</p>
                          </div>

                          <div id="slide-content-2">
                            <h2>Dots</h2>
                            <p>Play with colorful dots</p>
                            <p class="sub-text">Click<a href="/games/dots"> Here </a>to play!</p>
                          </div>

                          <div id="slide-content-3">
                            <h2>Coming soon!</h2>
                            <p>Awesome game soon to come.</p>
                            <p class="sub-text">Click<a href="#"> Here </a>to play!</p>
                          </div>

                          <div id="slide-content-4">
                            <h2>Coming soon!</h2>
                            <p>Awesome game soon to come.</p>
                            <p class="sub-text">Click<a href="#"> Here </a>to play!</p>
                          </div>

                          <div id="slide-content-5">
                            <h2>Coming soon!</h2>
                            <p>Awesome game soon to come.</p>
                            <p class="sub-text">Click<a href="#"> Here </a>to play!</p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div><!--/Slider-->

                  <div class="row hidden-xs" id="slider-thumbs">
                    <!-- Bottom switcher of slider -->
                    <ul class="hide-bullets">
                      <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-0"><img src="/images/asteroids.png"></a>
                      </li>

                      <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-1"><img src="/images/pong.jpg"></a>
                      </li>

                      <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-2"><img src="/images/dots.png"></a>
                      </li>

                      <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-3"><img src="/images/coming-soon.jpg"></a>
                      </li>

                      <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-4"><img src="/images/coming-soon.jpg"></a>
                      </li>

                      <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-5"><img src="/images/coming-soon.jpg"></a>
                      </li>
                    </ul>                 
                  </div>
                </div>
              </div>


<script>
  $(() => {

    $("#gamestab").addClass("active");

    $('#myCarousel').carousel({
      interval: 5000
    });

    $('#carousel-text').html($('#slide-content-0').html());

    //Handles the carousel thumbnails
    $('[id^=carousel-selector-]').click( function(){
    var id = this.id.substr(this.id.lastIndexOf("-") + 1);
    var id = parseInt(id);
    $('#myCarousel').carousel(id);
    });


    // When the carousel slides, auto update the text
    $('#myCarousel').on('slid.bs.carousel', function (e) {
    var id = $('.item.active').data('slide-number');
    $('#carousel-text').html($('#slide-content-'+id).html());
    });
  })
</script>

</body>
</html>
